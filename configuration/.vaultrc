{
  "sources": {

  },
  "paths": {
    "release": ".vault/release",
    "staging": ".vault/staging",
    "cache": ".vault/cache",
    "archive": "./vault"
  },
  "rules": {
    "patternMarkers": {
      "separator": "/",
      "version": ["@", "#"]
    },
    "ignoreFiles": [
      ".git",
      "CVS",
      ".svn",
      ".hg",
      ".*.swp",
      ".*.tmp",
      "*.log",
      ".DS_Store",
      "node_modules",
      "bower_components",
      "archives",
      "package-lock.json"
    ],
    "configurationSystem": [{
        "toolConfiguration": ".vaultrc",
        "archiveManifest": "vault.json",
        "versionSeparator": "@"
      }, {
        "toolConfiguration": ".bowerrc",
        "archiveManifest": "bower.json",
        "versionSeparator": "#"
      }, {
        "toolConfiguration": ".does_not_exist",
        "archiveManifest": "component.json",
        "versionSeparator": "#"
      }
    ]
  }
}
