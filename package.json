{
  "name": "klepto",
  "description": "Manage components packaged in zip files",
  "version": "0.9.12",
  "homepage": "https://github.com/mwjaworski/klepto",
  "author": {
    "name": "Michael Jaworski",
    "url": "https://github.com/mwjaworski"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/mwjaworski/klepto.git"
  },
  "bugs": {
    "url": "https://github.com/mwjaworski/klepto/issues"
  },
  "license": "MIT",
  "keywords": [
    "package management",
    "command line",
    "repository",
    "cli",
    "zip",
    "tar"
  ],
  "preferGlobal": true,
  "bin": {
    "klepto": "bin/index.js"
  },
  "main": "bin/index.js",
  "engines": {
    "node": ">=6.5.0"
  },
  "ignore": [
    "node_modules",
    "reports",
    "test",
    "/.*",
    "/*.js",
    "/*.json",
    "/*.yml",
    "/*.bkp"
  ],
  "scripts": {
    "validate": "node_modules/.bin/standard --fix bin/**/*.js test/**/*.js",
    "test": "node_modules/.bin/ava --timeout=3s test/**/*.js",
    "coverage": "./node_modules/.bin/nyc npm run test",
    "coveralls": "./node_modules/.bin/nyc npm run test; node_modules/.bin/coveralls < coverage/lcov.info",
    "postcoveralls": "rm -Rf ./coverage"
  },
  "dependencies": {
    "axios": "^0.17.1",
    "cli-color": "1.2.0",
    "fs-extra": "^4.0.2",
    "ftp": "^0.3.10",
    "is_js": "^0.9.0",
    "jszip": "^3.1.5",
    "lodash": "4.17.4",
    "micromatch": "^3.1.4",
    "semver": "^5.4.1",
    "tar": "^4.0.2",
    "vorpal": "^1.12.0",
    "winston": "^2.4.0"
  },
  "devDependencies": {
    "ava": "0.23.0",
    "coveralls": "*",
    "nyc": "^11.3.0",
    "standard": "^10.0.3"
  },
  "ava": {
    "files": [
      "bin/**/*.js"
    ],
    "source": [
      "bin/**/*.js"
    ],
    "failWithoutAssertions": true,
    "powerAssert": false,
    "concurrency": 5,
    "failFast": true,
    "tap": true
  },
  "nyc": {
    "check-coverage": true,
    "include": [
      "bin/**/*.js"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "cache": true,
    "all": true,
    "report-dir": "./coverage"
  }
}
